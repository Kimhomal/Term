extends ../layout

block content
  .container
    h1.page-header 회원 정보
          
    ul.media-list
      li.media 이름: #{user.name}
      li.media 이메일: #{user.email}
      if (user.facebook)
        li.media Facebook 
          img.img-circle(src='#{user.facebook.photo}')
    hr
    p
      a.btn.btn-default(href='/users/#{user._id}/edit')회원정보 수정
