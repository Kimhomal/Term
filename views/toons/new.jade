extends ../layout

block content
  .container
    h1.page-header 링크 추가
    form(action='/toons', method='POST')
      .form-group
        label(for='name') 이름
        input.form-control(type='text', id='name', name='name', placeholder='toon name')
      .form-group
        label(for='chap') 분류
        input.form-control(type='text', id='chap', name='chap', placeholder='chap')
      .form-group
        label(for='link') URL
        input.form-control(type='text', id='link', name='link', placeholder='link')
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 추가 
